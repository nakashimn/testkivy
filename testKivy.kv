<Test>:
    title: 'TestKivy'
    size:
    canvas:
        Color:
            rgba: 0, 0, 51/255, 1
        Rectangle:
            pos:root.pos
            size:root.size
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation:"vertical"
        Image:
            id:image
            size_hint: 1, .5
            texture: root.texture_input
            on_touch_down: self.collide_point(*args[1].pos) and root.drawRect(args[1],"down")
            on_touch_up: self.collide_point(*args[1].pos) and root.drawRect(args[1],"up")
#        FileChooserListView:
#            id:choose_dir
#            size_hint: 1, .6
#            path: root.text_input
#            dirselect: True
        BoxLayout:
            size_hint: 1,.3
            Image:
                color: (0, 0, 0, 1)
                size_hint: .5,1
                texture: root.texture_input_small
        Slider:
            id: slider
            size_hint: 1, .1
            min: 0.0
            max: 10.0
            value: root.value_input
        Label:
            id: label
            size_hint: 1,.05
            text: root.text_input
            color: 1, 1, 1, 1
        BoxLayout:
            size_hint: 1,.05
            orientation:"horizontal"
            Button:
                id: buttonA
                size_hint: 1/3,1
                text: 'A'
                on_press: root.PressA()
            Button:
                id: buttonB
                size_hint: 1/3,1
                text: 'B'
                on_press: root.PressB()
            Button:
                id: buttonC
                size_hint: 1/3,1
                text: 'C'
                on_press: root.PressC()
